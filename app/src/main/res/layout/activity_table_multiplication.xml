<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/font"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:padding="16dp">

    <!-- Image de fond (haut) -->
    <ImageView
        android:id="@+id/bg"
        android:layout_width="212dp"
        android:layout_height="76dp"
        android:scaleType="fitXY"
        android:src="@drawable/sea"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll horizontal contenant la grille -->
    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/multiplicationGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="9"
            android:rowCount="9"
            android:padding="4dp"
            android:background="#EEEEEE"/>
    </HorizontalScrollView>

    <!-- Bouton pour vérifier les réponses -->
    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تحقق"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bouton pour régénérer la table -->
    <Button
        android:id="@+id/btnRegenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إعادة المحاولة"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Image centrée en bas (porte) -->

    <!-- Image "next" à droite en bas -->
    <ImageView
        android:id="@+id/port"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/door"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
